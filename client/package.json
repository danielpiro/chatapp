{
    "name": "chat-app-client",
    "version": "0.1.0",
    "main": "./public/electron.js",
    "homepage": "./",
    "private": true,
    "dependencies": {
        "@emoji-mart/data": "^1.2.1",
        "@emoji-mart/react": "^1.1.1",
        "@emotion/react": "^11.13.0",
        "@emotion/styled": "^11.13.0",
        "@mui/icons-material": "^5.6.2",
        "@mui/material": "^5.16.7",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.1.1",
        "@testing-library/user-event": "^13.5.0",
        "@types/emoji-mart": "^3.0.14",
        "@types/node": "^16.11.27",
        "@types/react-dom": "^18.0.1",
        "emoji-mart": "^5.6.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "5.0.1",
        "typescript": "^4.6.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron:serve": "node scripts/generatePort.js | set /p PORT= & npm run start",
        "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/electron.js",
        "electron:start": "wait-on tcp:$PORT && cross-env PORT=$PORT electron ."
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@types/jest": "^29.5.12",
        "@types/mocha": "^10.0.7",
        "@types/react": "^18.3.3",
        "@types/react-router-dom": "^5.3.3",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^18.3.15",
        "electron-builder": "^23.6.0",
        "electron-is-dev": "^2.0.0",
        "wait-on": "^7.2.0"
    }
}
